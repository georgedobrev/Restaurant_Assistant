<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="Petko">
        <createTable tableName="refresh_token">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="Petko">
        <createTable tableName="QR_code">
            <column name="QR_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="QR_img" type="BLOB"/>
        </createTable>
    </changeSet>

    <changeSet id="3" author="Petko">
        <createTable tableName="user_role">
            <column name="user_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_id" type="INT">
                <constraints foreignKeyName="fk_user_role_role" nullable="false"/>
            </column>
            <column name="restaurant_id" type="INT">
                <constraints foreignKeyName="fk_user_role_restaurant" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="4" author="Petko">
        <createTable tableName="role">
            <column name="role_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="role_type" type="ENUM">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="Petko">
        <createTable tableName="virtual_table_mapping">
            <column name="vitual_table_id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tables_ids" type="NVARCHAR"/>
        </createTable>
    </changeSet>

    <changeSet id="6" author="Petko">
        <createTable tableName="token">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints foreignKeyName="fk_token_user" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="7" author="Petko">
        <createTable tableName="reservation">
            <column name="restaurant_id" type="INT">
                <constraints foreignKeyName="fk_reservation_restaurant" nullable="false"/>
            </column>
            <column name="reservation_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="client_phone_number" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="table_id" type="INT">
                <constraints foreignKeyName="fk_reservation_table" nullable="false"/>
            </column>
            <column name="people_count" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="8" author="Petko">
        <createTable tableName="table">
            <column name="table_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="QR_id" type="INT">
                <constraints foreignKeyName="fk_table_QR" nullable="false"/>
            </column>
            <column name="occupied" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="restaurant_id" type="INT">
                <constraints foreignKeyName="fk_table_restaurant" nullable="false"/>
            </column>
            <column name="capacity" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="virtual_table" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="9" author="Petko">
        <createTable tableName="user">
            <column name="user_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="blacklisted" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="table_id" type="INT">
                <constraints foreignKeyName="fk_user_table" nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN">
                <constraints foreignKeyName="fk_user_active" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="10" author="Petko">
        <createTable tableName="user_table">
            <column name="user_id" type="INT">
                <constraints foreignKeyName="fk_user_table_user" nullable="false"/>
            </column>
            <column name="datetime_start" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="datetime_end" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="waiter_id" type="INT">
                <constraints foreignKeyName="fk_user_table_waiter" nullable="false"/>
            </column>
            <column name="table_id" type="INT">
                <constraints foreignKeyName="fk_user_table_table" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="11" author="Petko">
        <createTable tableName="contact_info">
            <column name="contact_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="restaurant_id" type="INT">
                <constraints foreignKeyName="fk_contact_info_restaurant" nullable="false"/>
            </column>
            <column name="phone_number1" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number2" type="VARCHAR(255)"/>
            <column name="phone_number3" type="VARCHAR(255)"/>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="12" author="Petko">
        <createTable tableName="restaurant">
            <column name="restaurant_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="address" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="tables_count" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="13" author="Petko">
        <createTable tableName="notification_table">
            <column name="table_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="INT">
                <constraints foreignKeyName="fk_notification_table_user" nullable="false"/>
            </column>
            <column name="request_type" type="INT">
                <constraints foreignKeyName="fk_notification_table_request" nullable="false"/>
            </column>
            <column name="message" type="INT">
                <constraints foreignKeyName="fk_notification_table_message" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="14" author="Petko">
        <createTable tableName="reporting">
            <column name="report_id" type="INT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="QR_id" type="INT">
                <constraints foreignKeyName="fk_reporting_QR" nullable="false"/>
            </column>
            <column name="restaurant_id" type="INT">
                <constraints foreignKeyName="fk_reporting_restaurant" nullable="false"/>
            </column>
            <column name="report_from" type="INT">
                <constraints foreignKeyName="fk_reporting_from" nullable="false"/>
            </column>
            <column name="report_to" type="INT">
                <constraints foreignKeyName="fk  reporting_to" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>